<Window x:Class="Muzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muzzle"
        mc:Ignorable="d"
        Title="Muzzle" Height="450" Width="800" FontFamily="Tw Cen MT">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="1">
            <Image Source="/Image/Намордник.png"/>
        </DockPanel>
        <DockPanel Grid.Column="2">
            <TextBlock Text="Намордник" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35"/>
        </DockPanel>
        <Frame x:Name="frmMain" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
